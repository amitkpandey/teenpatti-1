<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context="affwl.com.exchange.MainActivity"
    android:id="@+id/linearLayoutloader">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_box" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Tejas"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:background="@drawable/chip_balance" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chips_add" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/share_icons_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share_loader"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:src="@drawable/loader_share" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="Tejas"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:background="@drawable/chip_balance" />
        </LinearLayout>


        <TextView
            android:id="@+id/buy_chips_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/buy_chips"
            android:paddingLeft="43dp"
            android:paddingStart="43dp"
            android:paddingTop="16dp"
            android:text="BUY CHIPS"
            android:textColor="#FFFF00"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:src="@drawable/loader_rateus"
                android:id="@+id/rateus_btn_loader"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:src="@drawable/loader_help"
                android:id="@+id/help_btn_loader"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:src="@drawable/loader_trophy"
                android:id="@+id/trophy_btn_loader"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:src="@drawable/loader_settings"
                android:id="@+id/settings_btn_loader"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
