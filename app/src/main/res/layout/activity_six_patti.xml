<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sixpattirecycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3">


    <ImageView
        android:id="@+id/handle_right"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:src="@drawable/btn_handle_right" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--Left side icon layout-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/back" />


            <ImageView
                android:id="@+id/info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/infogame" />
        </RelativeLayout>

        <!--Right side icon layout-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="211dp">


            <ImageView
                android:id="@+id/chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@drawable/chatgame" />

            <ImageView
                android:id="@+id/leaderboardsixpatti"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/leaderboardgame" />


        </RelativeLayout>
    </RelativeLayout>


    <!--Table layout-->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/table"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/teenpattitableimage" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/playerbg1relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/playerbg1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:src="@drawable/player_bg" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="2"
                        android:src="@drawable/player_bg"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/playerbg3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:src="@drawable/player_bg" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/playerbg2relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/playerbg2"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/player_bg" />

                    <ImageView
                        android:id="@+id/myplayer"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:src="@drawable/player_bg" />

                    <ImageView
                        android:id="@+id/playerbg4"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/player_bg" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

    <!--Sort Button-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:background="@drawable/yellow_buttons"
            android:padding="10dp"
            android:text="SORTt"
            android:textAlignment="center"
            android:textColor="@color/darkbrown" />


        <ImageView
            android:id="@+id/card1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@+id/sort"
            android:src="@drawable/club_ace" />

        <ImageView
            android:id="@+id/card2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="170dp"
            android:layout_toRightOf="@+id/sort"
            android:src="@drawable/diamond_king" />

        <ImageView
            android:id="@+id/card3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="190dp"
            android:layout_toRightOf="@+id/sort"
            android:src="@drawable/spade_queen" />

        <ImageView
            android:id="@+id/card4"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="210dp"
            android:layout_toRightOf="@+id/sort"
            android:src="@drawable/diamond_9" />

        <ImageView
            android:id="@+id/card5"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="230dp"
            android:layout_toRightOf="@+id/sort"
            android:src="@drawable/club_6" />

        <ImageView
            android:id="@+id/card6"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="250dp"
            android:layout_toRightOf="@+id/sort"
            android:src="@drawable/heart_jack" />
        <!--</RelativeLayout>-->

        <!--Sixpatti Go buttons-->
        <TextView
            android:id="@+id/sixpatti_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1dp"
            android:background="@drawable/yellow_buttons"
            android:padding="10dp"
            android:text="GO"
            android:textAlignment="center"
            android:textColor="@color/darkbrown" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/dealer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/table"
            android:layout_marginTop="20dp"
            android:src="@drawable/dealer"
            tools:ignore="NotSibling" />
    </RelativeLayout>

</RelativeLayout>
