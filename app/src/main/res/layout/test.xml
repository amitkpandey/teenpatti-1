<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tournamenttble"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3">

    <RelativeLayout
        android:id="@+id/relativeheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <!--Left side ithree_two_one_leaderboardyout-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/back" />

                <ImageView
                    android:id="@+id/info"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/infogame" />
            </LinearLayout>
        </RelativeLayout>

        <!--Right side ithree_two_one_leaderboardyout-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/chat321"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:src="@drawable/chatgame" />

                    <ImageView
                        android:id="@+id/leaderboard321"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/leaderboardgame" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


    <!--Three_two_one_leaderboardyout-->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/table"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/teenpattitableimage" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/playerbg1relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/playerbg1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/player_bg"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/player_bg"
                        android:visibility="invisible"
                        android:layout_weight="2"/>

                    <ImageView
                        android:id="@+id/playerbg3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/player_bg"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/playerbg2relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="70dp">

                    <ImageView
                        android:id="@+id/playerbg2"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/player_bg"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/myplayer"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/player_bg"
                        android:layout_weight="3"/>

                    <ImageView
                        android:id="@+id/playerbg4"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/player_bg"
                        android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearcardholder321"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/greencardholder"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:background="#00ffffff"
                        android:gravity="bottom"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/bluecardholder"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:background="#00ffffff"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/cyancardholder"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:background="#00ffffff"
                        android:orientation="horizontal" />

                </LinearLayout>

                <Button
                    android:id="@+id/cards321shifterbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="GO" />

                <LinearLayout
                    android:id="@+id/default321layout"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card321_1"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/spade_ace" />

                    <ImageView
                        android:id="@+id/card321_2"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/spade_ace" />

                    <ImageView
                        android:id="@+id/card321_3"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/spade_ace" />

                    <ImageView
                        android:id="@+id/card321_4"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/spade_ace" />

                    <ImageView
                        android:id="@+id/card321_5"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/spade_ace" />

                    <ImageView
                        android:id="@+id/card321_6"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@drawable/spade_ace" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/dealer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/table"
                android:layout_marginTop="20dp"
                android:src="@drawable/dealer"
                tools:ignore="NotSibling" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>